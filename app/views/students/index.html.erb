<p style="color: green"><%= notice %></p>

<h1>Students</h1>

<%= render 'search_form', search_params: @search_params %>

<!-- Student List in a Responsive Grid -->
<h2>Search Results</h2>
<div class="container">
  <div class="row">
    <% @students.each do |student| %>
      <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-info">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-info"><%= student.first_name %> <%= student.last_name %></h5>
            <p class="card-text">
              <strong>Major:</strong> <%= student.major %><br>
              <strong>Graduation Date:</strong> <%= student.graduation_date %>
            </p>
            <div class="mt-auto">
              <div class="btn-group">
                <%= link_to 'Show ', student_path(student), class: 'btn btn-info me-2 mb-2' %>
                <%= link_to 'Edit ', edit_student_path(student), class: 'btn btn-warning me-2 mb-2' %>
                <%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mb-2' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

