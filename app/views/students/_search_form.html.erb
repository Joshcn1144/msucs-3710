<%= form_with(url: students_path, method: :get, local: true, class: "form-inline") do |form| %>
    <div>
      <%= form.label :major, "Select Major", class: "form-label" %>
      <%= form.select :major, options_for_select(Student::VALID_MAJORS), { prompt: "Any Major" }, name: 'search[major]', class: "form-control" %>
    </div>
    
    <div>
    <%= form.label :date_filter, "Graduation Date Search", class: "form-label" %>
    <%= form.select :date_filter, options_for_select([["Before", "before"], ["After", "after"]]), name: 'search[date_filter]', class: "form-control" %>
    </div>

    <div>
    <%= form.label :graduation_date, "Date", class: "form-label" %>
    <%= form.date_field :graduation_date, name: 'search[graduation_date]', class: "form-control" %>
    <div>
      <%= form.submit "Search", class: "btn btn-primary" %>
      <%= link_to "Show All", students_path, class: "btn btn-secondary" %>
    </div>
   <% end %>
   